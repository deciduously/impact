{
  "name": "impact",
  "version": "0.1.0",
  "description": "Survive the crash!",
  "main": "impact.js",
  "repository": "https://github.com/deciduously/impact",
  "author": "deciduously <github@deciduously.com>",
  "license": "MIT",
  "scripts": {
    "clean": "cargo clean",
    "build:rs": "cargo web deploy --release",
    "build:scss": "node-sass --include-path scss scss/impact.scss css/impact.css",
    "build:css": "postcss --use autoprefixer -o static/impact.css css/impact.css",
    "build:copy": "mkdir out && cp -r target/deploy/* out/",
    "build": "run-s build:rs build:copy",
    "watch:rs": "cargo web start --release",
    "watch:scss": "nodemon -e scss -x \"yarn build:scss\"",
    "watch:css": "nodemon -e css -x \"yarn build:css\"",
    "watch": "run-p watch:rs watch:scss watch:css",
    "start": "run-s watch",
    "test": "echo \"Error: no tests!\" && exit 1"
  },
  "devDependencies": {
    "autoprefixer": "^8.4.1",
    "node-sass": "^4.9.0",
    "nodemon": "^1.17.4",
    "npm-run-all": "^4.1.2",
    "postcss": "^6.0.22",
    "postcss-cli": "^5.0.0"
  }
}
